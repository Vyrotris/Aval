<!DOCTYPE html>
<html>
<head>
  <title>Aval Dashboard</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: #0a0a0a; color: #ffffff;
      min-height: 100vh; padding: 20px;
    }
    .container {
      max-width: 600px; margin: auto; background: #111111;
      border: 1px solid #333333; border-radius: 12px;
      padding: 32px; animation: slideUp 0.6s ease-out;
    }
    @keyframes slideUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    h1 { font-size: 28px; font-weight: 600; margin-bottom: 24px; text-align: center; }
    h2 { font-size: 20px; font-weight: 500; margin-bottom: 16px; color: #a3a3a3; text-align: center; }
    select, .guild-card select {
      background: #1a1a1a; color: #fff; border: 1px solid #333333;
      border-radius: 6px; padding: 6px; font-size: 14px;
      width: 100%; margin-top: 8px;
    }
    .guild-card {
      background: #1a1a1a; border: 1px solid #333333; border-radius: 8px;
      padding: 16px; margin-top: 20px;
      transition: all 0.2s ease;
    }
    button {
      background: #22c55e; color: #fff; border: none;
      padding: 8px 16px; border-radius: 6px;
      font-size: 14px; font-weight: 500; cursor: pointer;
      margin-top: 12px; transition: all 0.2s ease;
    }
    button:hover { background: #1fa14f; transform: translateY(-1px); }
  </style>
  <script>
    function showGuildSettings() {
      const selectedId = document.getElementById('guildSelector').value;
      document.querySelectorAll('.guild-card').forEach(card => {
        card.style.display = card.dataset.guildId === selectedId ? 'block' : 'none';
      });
    }
  </script>
</head>
<body>
  <div class="container">
    <h1>Welcome, <%= user.username %>!</h1>

    <% if (guilds.length === 0) { %>
      <h2>You are not in any servers with admin permissions or Aval is not in your servers.</h2>
    <% } else { %>
      <h2>Select a Server:</h2>
      <select id="guildSelector" onchange="showGuildSettings()">
        <% guilds.forEach(guild => { %>
          <option value="<%= guild.id %>"><%= guild.name %></option>
        <% }) %>
      </select>

      <% guilds.forEach(guild => { %>
        <form action="/dashboard/save" method="POST" class="guild-card" data-guild-id="<%= guild.id %>" style="display:none;">
          <input type="hidden" name="guildId" value="<%= guild.id %>">
          <label for="autorole_<%= guild.id %>">Autorole:</label>
          <select name="autoroleRole" id="autorole_<%= guild.id %>">
            <option value="">— Disabled —</option>
            <% (roles[guild.id] || []).forEach(role => { %>
              <option value="<%= role.id %>" <%= settings[guild.id]?.autorole_role_id === role.id ? 'selected' : '' %>>
                <%= role.name %>
              </option>
            <% }) %>
          </select>
          <button type="submit">Save Settings</button>
        </form>
      <% }) %>
    <% } %>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      if (document.getElementById('guildSelector')) {
        const selector = document.getElementById('guildSelector');
        if (selector.options.length > 0) {
          selector.selectedIndex = 0;
          showGuildSettings();
        }
      }
    });
  </script>
</body>
</html>